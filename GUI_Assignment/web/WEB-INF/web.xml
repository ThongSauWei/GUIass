<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>CompanyName</param-name>
        <param-value>&#169; LEGO</param-value>
    </context-param>
    <context-param>
        <param-name>AdminEmail</param-name>
        <param-value>admin@123.com</param-value>
    </context-param>
    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>Servlet.InitServlet</servlet-class>
        <load-on-startup></load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitServlet</servlet-name>
        <url-pattern>/InitServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StaffMaint</servlet-name>
        <servlet-class>Servlet.StaffMaint</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MemMaint</servlet-name>
        <servlet-class>Servlet.MemMaint</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffList</servlet-name>
        <servlet-class>Servlet.StaffList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdMaint</servlet-name>
        <servlet-class>Servlet.ProdMaint</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdList</servlet-name>
        <servlet-class>Servlet.ProdList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportResult</servlet-name>
        <servlet-class>Servlet.ReportResult</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffMaint</servlet-name>
        <url-pattern>/StaffMaint</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemMaint</servlet-name>
        <url-pattern>/MemMaint</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffList</servlet-name>
        <url-pattern>/StaffList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdMaint</servlet-name>
        <url-pattern>/ProdMaint</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdList</servlet-name>
        <url-pattern>/ProdList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportResult</servlet-name>
        <url-pattern>/ReportResult</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>Servlet.register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servlet.login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
        
    <!--image servlet-->
    <servlet>
        <servlet-name>RetrieveImageServlet</servlet-name>
        <servlet-class>Servlet.RetrieveImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RetrieveImageServlet</servlet-name>
        <url-pattern>/RetrieveImageServlet</url-pattern>
    </servlet-mapping>
    <!--Search bar servlet-->
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>Servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <!--Home page Servlet-->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>
    <!--Create Discount Servlet-->
    <servlet>
        <servlet-name>DiscountCreateServlet</servlet-name>
        <servlet-class>Servlet.DiscountCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiscountCreateServlet</servlet-name>
        <url-pattern>/DiscountCreateServlet</url-pattern>
    </servlet-mapping>
    <!--Display Discont Servlet-->
    <servlet>
        <servlet-name>DiscountDisplayServlet</servlet-name>
        <servlet-class>Servlet.DiscountDisplayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiscountDisplayServlet</servlet-name>
        <url-pattern>/DiscountDisplayServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
